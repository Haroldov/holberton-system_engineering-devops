#!/usr/bin/env bash
# redirect with 301

sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/haroldo.tech
new_string="server_name haroldo.tech;\n\trewrite ^\/(.*)$ https:\/\/www.youtube.com\/watch?v=QH2-TGUlwu4 permanent;\n"
cd /etc/nginx/sites-available
sudo sed -i "s/server_name _;/$new_string/" haroldo.tech
